<mvc:View controllerName="iot.timetracking-worklist.controller.Worklist" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:semantic="sap.f.semantic">

	<Page id="page">

		<content>
			<Table id="table" width="auto" items="{
					path: '/Employees',
					sorter: {
						path: 'name',
						descending: false
					}
				}" mode="MultiSelect" noDataText="{worklistView>/tableNoDataText}" growing="true" growingScrollToLoad="true" updateFinished=".onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search=".onSearch"/>
						<Button icon="sap-icon://add" press="onPressAdd"/>
						<Button icon="sap-icon://delete" press="onPressDelete"/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="nameColumn">
						<Text text="Name" id="nameColumnTitle"/>
					</Column>
					<Column>
						<Text text="Anzahl Einträge"/>
					</Column>
					<Column>
						<Text text="Fakt.-stunden"/>
					</Column>
					<Column>
						<Text text="Bonus"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem type="Navigation" press=".onPress">
						<cells>
							<ObjectIdentifier title="{name}"/>
							<ObjectNumber number="{recordsCount}"/>
							<ObjectNumber number="{
								path: 'billingTime', 
								type: 'sap.ui.model.type.Float',
								formatOptions: {
										maxFractionDigits: 2,
										roundingMode: 'away_from_zero'
								}}" />
							<ObjectNumber number="{
								path: 'bonus', 
								type: 'sap.ui.model.type.Float',
								formatOptions: {
										maxFractionDigits: 2,
										roundingMode: 'away_from_zero'
								}}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>Ì

</mvc:View>