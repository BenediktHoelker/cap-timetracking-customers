<mvc:View controllerName="iot.timetracking-worklist.controller.Object" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc">

	<Page title="{name}" id="page" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}">

		<content>
			<Table id="recordsTable" items="{
					path: 'records',
					sorter: {	
						path: 'title'
					}
				}" mode="MultiSelect" noDataText="{worklistView>/tableNoDataText}" growing="true" growingScrollToLoad="true">

				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer />
						<Button icon="sap-icon://add" press="onPressAddRecord"/>
						<Button icon="sap-icon://delete" press="onPressDeleteRecord"/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="Title"/>
					</Column>
					<Column>
						<Text text="Description"/>
					</Column>
					<Column>
						<Text text="Duration"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem type="Navigation" press=".onPress">
						<cells>
							<ObjectIdentifier title="{title}"/>
							<Text text="{description}"/>
							<ObjectNumber number="{duration}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>


	</Page>

</mvc:View>